<tr>
  <td>
    <table border="0" cellpadding="0" cellspacing="0" class="itemlist">
      <% index = 1 %>
      <% @contributions.each do |contribution| %>
        <tr class='athing' id='<%= contribution.id %>'>
          <td align="right" valign="top" class="title"><span class="rank"><%= index %></span></td>
          <td valign="top" class="votelinks">
            <center>
              <a id='up_<%= contribution.id %>' href='vote?id=<%= contribution.id %>&amp;how=up&amp;goto=news'>
                <div class='votearrow' title='upvote'></div>
              </a>
            </center>
          </td>
          <td class="title">
            <% unless contribution.url == '' %>
              <a href="<%= contribution.url %>" class="storylink" target="_blank"><%= contribution.title %></a>
              <!-- TODO: Implement filter by site and show only domain name -->
              <span class="sitebit comhead"> (<a href="#"><span class="sitestr"><%= contribution.url %></span></a>)</span></td>
            <% else %>
              <a href="/<%= contribution.id %>" class="storylink"><%= contribution.title %></a>
              <span class="sitebit comhead"> (<a href="from?site=nirsoft.net"><span class="sitestr">nirsoft.net</span></a>)</span></td>
            <% end %>
        </tr>
        <tr>
          <td colspan="2"></td>
          <td class="subtext">
            <span class="score" id="score_<%= contribution.id %>">137 points</span> by
            <a href="users/<%= contribution.user.id %>" class="hnuser"><%= contribution.user.name %></a>
            <% time = (Time.now() - contribution.created_at) %>

            <% if time < 60 %>
                <% showTime = time.round %>
                <% timeType = "seconds" %>
            <% end %>

            <% if time >= 60 && time < 120 %>
                <% showTime = (time/60).round %>
                <% timeType = "minute" %>
            <% end %>

            <% if time >= 120 && time < 3600 %>
                <% showTime = (time/60).round %>
                <% timeType = "minutes" %>
            <% end %>

            <% if time >= 3600 && time < 3600*2 %>
                <% showTime = (time/3600).round %>
                <% timeType = "hour" %>
            <% end %>

            <% if time >= 3600 && time < 3600*24 %>
                <% showTime = (time/3600).round %>
                <% timeType = "hours" %>
            <% end %>

            <% if time >= 3600*24 && time < 3600*24*2 %>
                <% showTime = (time/(3600*24)).round %>
                <% timeType = "day" %>
            <% end %>

            <% if time >= 3600*24 %>
                <% showTime = (time/(3600*24)).round %>
                <% timeType = "days" %>
            <% end %>

            <span class="age"><a href="<%= contribution.id %>"><%= showTime%> <%= timeType%> ago</a></span>

            <% comments = contribution.comments.count%>
            <% show = "comment" %>
            <% if comments != 1 %>
                <% show = "comments" %>
            <% end %>

            <span id="unv_<%= contribution.id %>"></span> | <a href="<%= contribution.id %>"><%= comments %> <%= show %></a>
          </td>
        </tr>
        <tr class="spacer" style="height:5px"></tr>
        <% index += 1 %>
      <% end %>

      <!-- more button -->
      <!-- TODO: Do we want a pagination of contributions? -->
      <!--<tr class="morespace" style="height:10px"></tr>-->
