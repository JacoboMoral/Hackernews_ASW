<table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
<tr>
  <td>
    <table class="fatitem" border="0">
      <tbody><tr class="athing" id="<%= @contribution.id %>">
        <td align="right" valign="top" class="title">
          <span class="rank"></span>
        </td>
        <td valign="top" class="votelinks">
          <center>
            <a id="up_<%= @contribution.id %>">
              <div class="votearrow" title="upvote">
              </div>
            </a>
          </center>
        </td>
        <td class="title">
          <a href="/<%= @contribution.id %>" class="storylink"> <%= @contribution.title %>
          </a>
        </td>
      </tr>
      <tr>
        <td colspan="2">
        </td>
        <td class="subtext">
          <span class="score" id="score_<%= @contribution.id %>">79 points</span>
           by
           <a href="user/" class="hnuser"><%= @contribution.user_id %></a>
            <span class="age">
              <a href="/<%= @contribution.id %>"><%= @contribution.created_at %></a>
            </span>
            <span id="unv_<%= @contribution.id %>">
            </span>
            |
            <a href="/<%= @contribution.id %>">51&nbsp;comments</a>
          </td>
        </tr>
      <tr style="height:2px"></tr>
      <tr>
        <td colspan="2"></td>
        <td> <%= @contribution.text %> </p></td>
      </tr>
        <tr style="height:10px"></tr>
        <tr>
          <td colspan="2"></td>
          <td>
            <%= render 'comments/form' %>
            </td>
          </tr>
          <% @comments.each do |comment| %>
          <% current_user = nil%>
              <div style="margin-left:10px">
                  <table>
                      <tr>
                          <td>
                      <% if current_user != nil && current_user.id != comment.user.id %>
                          <form action="/comments/<%= comment.id %>/vote" method="POST"
                            id="upvote_comment_form">
                              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                              <% if current_user && !current_user.voted_for?(comment) %>
                              <input type="hidden" name="reply[user_id]" value=<%= current_user.id %>>
                              <input type="image" name="submit_vote" class="votearrow">
                              <% elsif !current_user %>
                              <a href="#" id="up_1"><div class="votearrow" title="upvote"></div></a>
                              <% end %>
                          </form>
                      <% elsif current_user != nil %>
                          <font color="orange" size="3">*</font>
                      <% else %>
                      <a href="#" id="up_1"><div class="votearrow" title="upvote"></div></a>
                      <% end %>
                      </td>
                          <td><a href="#"> <%= comment.user.name %></a>

                          <% time = (Time.now() - comment.created_at) %>

                          <% if time < 3600 %>
                              <a href="#" <%= (time/60).round %> minutes ago</a> |
                          <% end %>

                          <% if time >= 3600 && time < 3600*24 %>
                              <a href="#"><%= (time/3600).round %> hours ago</a> |
                          <% end %>

                          <% if time >= 3600*24 %>
                              <a href="#"><%= (time/(3600*24)).round %> days ago</a> |
                          <% end %>
                      </tr>
                      </table>
                      <table>
                      <tr>
                          <td style="color:grey;"> <%= comment.content %></td>
                      </tr>
                  </table>
                  <a href="#">reply</a>
              </div>
        <%end%>
        </tbody>
      </table>
    </td>
  </tr>
</table>
